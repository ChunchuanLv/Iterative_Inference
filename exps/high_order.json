{
    "dataset_reader": {
        "type": "universal_dependencies",
        "use_language_specific_pos": true,
          "token_indexers": {
              "elmo": {
                  "type": "elmo_characters"
              }
          }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 64,
        "sorting_keys": [
            [
                "words",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "high_order_parser",
        "arc_representation_dim": 500,
        "dropout": 0.3,
        "encoder": {
            "type": "stacked_bidirectional_lstm",
            "hidden_size": 1124,
            "input_size": 1124,
            "num_layers": 3,
            "recurrent_dropout_probability": 0.3,
            "use_highway": true
        },
        "refiner": {
            "type": "score_refiner",
                 "input_dim": 2248,
                 "hidden_dim": 300,
                 "iterations": 3,
                 "testing_iterations": 2,
                 "iterative_lr": 0.1,
                 "learn_lr":false,
                "mean_filed":true,
                "diagonal_mask":true,
                "stright_through":false,
                "detach":false,
                "initial_loss":true,
                 "gumbel_t":1.0
        },
        "stational_loss":false,
        "learn_score":true,
        "last_only":false,

        "use_mst_decoding_for_validation": true,
        "initializer": [
            [
                ".*feedforward.*weight",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*feedforward.*bias",
                {
                    "type": "zero"
                }
            ],
            [
                ".*tag_bilinear.*weight",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*tag_bilinear.*bias",
                {
                    "type": "zero"
                }
            ],
            [
                ".*weight_ih.*",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*weight_hh.*",
                {
                    "type": "orthogonal"
                }
            ],
            [
                ".*bias_ih.*",
                {
                    "type": "zero"
                }
            ],
            [
                ".*bias_hh.*",
                {
                    "type": "lstm_hidden_bias"
                }
            ]
        ],
        "input_dropout": 0.3,
        "pos_tag_embedding": {
            "embedding_dim": 100,
            "sparse": true,
            "vocab_namespace": "pos"
        },
        "tag_representation_dim": 200,
        "text_field_embedder": {
          "elmo": {
            "type": "elmo_token_embedder",
            "options_file": "/disk/scratch/s1544871/elmo//elmo_2x4096_512_2048cnn_2xhighway_options.json",
            "weight_file": "/disk/scratch/s1544871/elmo//elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5",
            "do_layer_norm": false,
            "dropout": false
          }
        }
    },
    "train_data_path": "/disk/scratch/s1544871/ptb/train.conll",
    "validation_data_path": "/disk/scratch/s1544871/ptb/dev.conll",
    "test_data_path": "/disk/scratch/s1544871/ptb/test.conll",
    "evaluate_on_test": true,
    "trainer": {
        "cuda_device":3,
        "grad_norm": 5,
        "num_epochs": 150,
        "optimizer": {
            "type": "dense_sparse_adam",
            "betas": [
                0.9,
                0.9
            ]
        },
        "patience": 30,
        "validation_metric": "+LAS"
    }
}