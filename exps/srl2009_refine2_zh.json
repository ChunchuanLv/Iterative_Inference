{
  "dataset_reader": {
    "type": "conll2009_zh",
    "filter": true,
    "data_folder": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-Chinese/"
  },
  "train_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-Chinese/CoNLL2009-ST-Chinese-train.txt",
  "validation_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-Chinese/CoNLL2009-ST-Chinese-development.txt",
  "test_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-Chinese/CoNLL2009-ST-evaluation-Chinese.txt",
  "model": {
    "type": "srl_graph_parser_refine2",
    "base_model_archive": "base_zh_model.tar.gz",
      "refiner": {
        "type": "srl_refiner2",
        "detach_type": "all",
        "iterations": 2,
        "testing_iterations":3,
        "corruption_iterations":1,
       "graph_encoder":3,
        "corrupt_input": true,
        "gating": false,
        "dropout": 0.3,
        "stright_through": false,
        "dropout_local":false,
        "denoise": true,
        "score_dim": 200,
        "corruption_rate": 0.2,
        "gumbel_t": 1.0
      },
      "encoder": {
        "type": "stacked_bidirectional_lstm",
      "input_size": 428,
        "hidden_size": 428,
        "num_layers": 3,
        "recurrent_dropout_probability": 0.3,
        "use_highway": true
      },
    "rep_dim": 428,
    "re_estimate_logits":false,
    "finetune": "no",
    "distance": "kl",
    "normalize_logits":false,
    "dropout": 0.3,
      "train_score": 10,
      "initializer": [
        [
          ".*feedforward.*weight",
          {
            "type": "xavier_uniform"
          }
        ],
        [
          ".*feedforward.*bias",
          {
            "type": "zero"
          }
        ],
        [
          ".*tag_bilinear.*weight",
          {
            "type": "xavier_uniform"
          }
        ],
        [
          ".*tag_bilinear.*bias",
          {
            "type": "zero"
          }
        ],
        [
          ".*weight_ih.*",
          {
            "type": "xavier_uniform"
          }
        ],
        [
          ".*weight_hh.*",
          {
            "type": "orthogonal"
          }
        ],
        [
          ".*bias_ih.*",
          {
            "type": "zero"
          }
        ],
        [
          ".*bias_hh.*",
          {
            "type": "lstm_hidden_bias"
          }
        ]
      ]
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [
        [
          "tokens",
          "num_tokens"
        ]
      ],
      "batch_size": 16
    },
    "evaluate_on_test": false,
    "trainer": {
      "num_epochs": 600,
      "grad_norm": 5.0,
      "patience": 200,
      "cuda_device": 3,
      "validation_metric": "+F_3",
      "optimizer": {
        "type": "dense_sparse_adam",
      "lr":0.00001,
        "betas": [
          0.9,
          0.9
        ]
      }
    }
  }
