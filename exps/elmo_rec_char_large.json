{
    "dataset_reader": {
        "type": "universal_dependencies",
        "use_language_specific_pos": true,
          "token_indexers": {
              "elmo": {
                  "type": "elmo_characters"
              }
          }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 64,
        "sorting_keys": [
            [
                "words",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "elmo_biaffine_parser",
        "arc_representation_dim": 500,
        "encoder": {
            "type": "stacked_bidirectional_lstm",
            "hidden_size": 1224,
            "input_size": 1124,
            "num_layers": 2,
            "recurrent_dropout_probability": 0.3,
            "use_highway": true
        },
        "char_decoder": {
            "type": "augmented_lstm",
            "hidden_size": 200,
            "input_size": 100,
            "recurrent_dropout_probability": 0.3,
            "use_highway": true
        },
        "auto_enc": true,
        "dropout": 0.3,
        "gumbel_head_t": 1.0,
        "initializer": [
            [
                ".*feedforward.*weight",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*feedforward.*bias",
                {
                    "type": "zero"
                }
            ],
            [
                ".*tag_bilinear.*weight",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*tag_bilinear.*bias",
                {
                    "type": "zero"
                }
            ],
            [
                ".*weight_ih.*",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*weight_hh.*",
                {
                    "type": "orthogonal"
                }
            ],
            [
                ".*bias_ih.*",
                {
                    "type": "zero"
                }
            ],
            [
                ".*bias_hh.*",
                {
                    "type": "lstm_hidden_bias"
                }
            ]
        ],
        "drop_data":true,
        "input_dropout": 0.3,
        "pos_tag_embedding": {
            "embedding_dim": 100,
            "sparse": true,
            "vocab_namespace": "pos"
        },
        "tag_representation_dim": 200,
        "text_field_embedder": {
          "elmo": {
            "type": "elmo_token_embedder",
            "options_file": "/disk/scratch/s1544871/elmo//elmo_2x4096_512_2048cnn_2xhighway_options.json",
            "weight_file": "/disk/scratch/s1544871/elmo//elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5",
            "do_layer_norm": false,
            "dropout": 0
          }
        },
        "use_mst_decoding_for_validation": true
    },
    "train_data_path": "/disk/scratch/s1544871/ptb/train.gold.conll",
    "validation_data_path": "/disk/scratch/s1544871/ptb/dev.gold.conll",
    "test_data_path": "/disk/scratch/s1544871/ptb/test.gold.conll",
    "evaluate_on_test": true,
    "trainer": {
        "cuda_device": 2,
        "grad_norm": 5,
        "num_epochs": 100,
        "optimizer": {
            "type": "dense_sparse_adam",
            "betas": [
                0.9,
                0.9
            ]
        },
        "patience": 20,
        "validation_metric": "+LAS",
        "num_serialized_models_to_keep":-1
    }
}