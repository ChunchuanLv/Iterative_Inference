{
  "dataset_reader": {
    "type": "conll2009_zh",
    "filter": true,
    "data_folder": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-Chinese/"
  },
  "vocabulary":{
    "directory_path":"../Iterative_Inference_Models/zh_vocabulary"
  },
  "train_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-Chinese/CoNLL2009-ST-Chinese-train.txt",
  "validation_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-Chinese/CoNLL2009-ST-Chinese-development.txt",
  "iterator": {
    "type": "bucket",
    "batch_size": 32,
    "sorting_keys": [
      [
        "tokens",
        "num_tokens"
      ]
    ]
  },
  "model": {
    "type": "srl_graph_parser_refine",
    "base_model_archive": "../Iterative_Inference_Models/base_zh_model.tar.gz",
    "dropout": 0.3,
      "encoder": {
        "type": "stacked_bidirectional_lstm",
        "input_size": 428,
        "hidden_size": 428,
        "num_layers": 3,
        "recurrent_dropout_probability": 0.3,
        "use_highway": true
      },
      "refiner": {
        "type": "spens_refiner",
        "iterations": 2,
        "testing_iterations":4,
        "corruption_iterations":0,
        "dropout": 0.3,
        "stright_through": false,
        "hidden_dim": 300,
        "corruption_rate": 0.2,
        "gumbel_t": 5.0,
        "subtract_gold":1.0,
        "graph_type":0,
        "sparse_max":false,
        "fw_update":false
      },
    "rep_dim":200,
    "train_score":10,
    "delta_type":"theory",
    "initializer": [
      [
        ".*feedforward.*weight",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*feedforward.*bias",
        {
          "type": "zero"
        }
      ],
      [
        ".*tag_bilinear.*weight",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*tag_bilinear.*bias",
        {
          "type": "zero"
        }
      ],
      [
        ".*weight_ih.*",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*weight_hh.*",
        {
          "type": "orthogonal"
        }
      ],
      [
        ".*bias_ih.*",
        {
          "type": "zero"
        }
      ],
      [
        ".*bias_hh.*",
        {
          "type": "lstm_hidden_bias"
        }
      ]
    ],
  },
 "trainer": {
    "cuda_device": 2,
    "grad_norm": 5,
    "num_epochs": 600,
    "optimizer": {
      "type": "dense_sparse_adam",
      "lr":3e-4,
      "betas": [
        0.9,
        0.9
      ]
    },
    "patience": 600,
    "validation_metric": "+F_2"
  }
}
