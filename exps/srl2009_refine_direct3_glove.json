{
  "dataset_reader": {
    "type": "conll2009",
    "data_folder": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-English/",
    "filter": true
  },
  "iterator": {
    "type": "bucket",
    "batch_size": 64,
    "biggest_batch_first": true,
    "sorting_keys": [
      [
        "tokens",
        "num_tokens"
      ]
    ]
  },
  "model": {
    "type": "srl_graph_parser_refine_direct3",
    "base_model_archive": "glove_base_model.tar.gz",
    "dropout": 0.3,
    "encoder": {
      "type": "stacked_bidirectional_lstm",
      "hidden_size": 500,
      "input_size": 428,
      "num_layers": 3,
      "recurrent_dropout_probability": 0.3,
      "use_highway": true
    },
    "hidden_dim":200,
    "rep_dim":500,
    "refine_epoch":1,
    "testing_ecpoh":3,
    "hiddne_layers":1,
    "gumbel_t":1,
    "weight_tie":false,
    "straight_through":false,
    "activation":"sigmoid",
    "add_logits":true,
    "denoise_iterations":1,
    "add_predicate_emb":true,
    "corruption_rate":0.2,
    "re_estimate_logits":false,
    "finetune": "no",
    "initializer": [
      [
        ".*feedforward.*weight",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*feedforward.*bias",
        {
          "type": "zero"
        }
      ],
      [
        ".*tag_bilinear.*weight",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*tag_bilinear.*bias",
        {
          "type": "zero"
        }
      ],
      [
        ".*weight_ih.*",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*weight_hh.*",
        {
          "type": "orthogonal"
        }
      ],
      [
        ".*bias_ih.*",
        {
          "type": "zero"
        }
      ],
      [
        ".*bias_hh.*",
        {
          "type": "lstm_hidden_bias"
        }
      ]
    ],
  },
  "train_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-English/CoNLL2009-ST-English-train.txt",
  "validation_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-English/CoNLL2009-ST-English-development.txt",
  "test_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-English/CoNLL2009-ST-evaluation-English.txt",
  "trainer": {
    "cuda_device": 2,
    "grad_norm": 5,
    "num_epochs": 600,
    "optimizer": {
      "type": "dense_sparse_adam",
      "betas": [
        0.9,
        0.9
      ]
    },
    "patience": 200,
    "validation_metric": "+F_1"
  },
  "evaluate_on_test": true
}