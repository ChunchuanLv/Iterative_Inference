{
  "dataset_reader": {
    "type": "conll2009_en",
    "data_folder": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-English/",
    "token_indexers": {
      "elmo": {
        "type": "elmo_characters"
      }
    }
  },
  "vocabulary":{
    "directory_path":"../Iterative_Inference_Models/en_vocabulary"
  },
  "iterator": {
    "type": "bucket",
    "batch_size": 32,
    "sorting_keys": [
      [
        "tokens",
        "num_tokens"
      ]
    ]
  },
  "model": {
    "type": "srl_graph_parser_transformer",
    "base_model_archive": "../Iterative_Inference_Models/base_en_model.tar.gz",
    "dropout": 0.3,
    "encoder": {
      "type": "stacked_bidirectional_lstm",
      "hidden_size": 682,
      "input_size": 682,
      "num_layers": 3,
      "recurrent_dropout_probability": 0.3,
      "use_highway": true
    },
   "input_dim": 1152,
   "hidden_dim": 500,
   "projection_dim": 300,
   "feedforward_hidden_dim": 300,
    "use_linear":false,
   "num_layers": 1,
   "num_attention_heads": 4,
    "initializer": [
      [
        ".*feedforward.*weight",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*feedforward.*bias",
        {
          "type": "zero"
        }
      ],
      [
        ".*tag_bilinear.*weight",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*tag_bilinear.*bias",
        {
          "type": "zero"
        }
      ],
      [
        ".*weight_ih.*",
        {
          "type": "xavier_uniform"
        }
      ],
      [
        ".*weight_hh.*",
        {
          "type": "orthogonal"
        }
      ],
      [
        ".*bias_ih.*",
        {
          "type": "zero"
        }
      ],
      [
        ".*bias_hh.*",
        {
          "type": "lstm_hidden_bias"
        }
      ]
    ],
  },
  "train_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-English/CoNLL2009-ST-English-train.txt",
  "validation_data_path": "/afs/inf.ed.ac.uk/user/s15/s1544871/Data/2009_conll_p2/data/CoNLL2009-ST-English/CoNLL2009-ST-English-development.txt",
  "trainer": {
    "cuda_device": 1,
    "grad_norm": 5,
    "num_epochs": 300,
    "optimizer": {
      "type": "dense_sparse_adam",
      "lr":3e-4,
      "betas": [
        0.9,
        0.9
      ]
    },
    "patience": 600,
    "validation_metric": "+F"
  }
}
